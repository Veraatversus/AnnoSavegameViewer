<UserControl
  x:Class="AnnoSavegameViewer.Controls.ItemTreeControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:AnnoSavegameViewer.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:templates="clr-namespace:AnnoSavegameViewer.Templates"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Border
      x:Name="ItemFront"
      Grid.Column="2"
      BorderBrush="#FF554628"
      BorderThickness="1"
      CornerRadius="5"
      Visibility="Visible">
      <Grid>
        <Border BorderBrush="#FF554628" BorderThickness="1" CornerRadius="5">
          <TreeView ItemsSource="{Binding ItemsHolder.SelectedItemTree}">
            <TreeView.Background>
              <SolidColorBrush Opacity="0.7" Color="White" />
            </TreeView.Background>
            <TreeView.ItemTemplate>
              <HierarchicalDataTemplate ItemsSource="{Binding}">
                <TextBlock Text="{Binding}" />
              </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
          </TreeView>
        </Border>
      </Grid>
    </Border>
  </Grid>
</UserControl>