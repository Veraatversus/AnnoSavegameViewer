<Window
  x:Class="ClassCreator.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:System="clr-namespace:System;assembly=mscorlib"
  xmlns:core="clr-namespace:AnnoSavegameViewer.Serialization.Core;assembly=AnnoSavegameViewer"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:local="clr-namespace:ClassCreator"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:text="clr-namespace:System.Text;assembly=System.Runtime"
  Title="MainWindow"
  Width="1200"
  Height="800"
  d:DataContext="{d:DesignInstance Type={x:Type local:ViewModel}}"
  Background="#FF2D2D30"
  mc:Ignorable="d">
  <Window.Resources />
  <Grid>
    <TabControl>
      <TabItem Header="File View">
        <local:FileView />
      </TabItem>
      <TabItem Header="Pattern View">
        <local:PatternView />
      </TabItem>
    </TabControl>
  </Grid>
</Window>